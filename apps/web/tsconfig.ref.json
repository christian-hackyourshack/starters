{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src",
    "noEmit": true,
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@partials/*": ["partials/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "include": ["src/**/*"]
}
